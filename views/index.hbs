<div class="container text-align-center">
    <div class="row">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/assets/img/angus-burger.webp" class="d-block w-100" alt="Angus Burger">
                </div>
                <div class="carousel-item">
                    <img src="/assets/img/veggie-burger.jpg" class="d-block w-100" alt="Veggie Burger">
                </div>
                <div class="carousel-item">
                    <img src="/assets/img/jolly-burger.jpg" class="d-block w-100" alt="Jolly Burger">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4"></div>
        <h1 class="col-md-4" style="text-align: center;">Burgers!</h1>
        <div class="col-md-4"></div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <h2 style="text-align: center;">New Burgers</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{>burgers/burgers-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <h2 style="text-align: center;">Devoured Burgers</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{>burgers/devoured-block}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row text-center">
        <div class="col-md-4"></div>
        <form class="burger-form col-md-4">
            <div class="form-group">
                <label for="burger-input">What kind of burger would you like?</label>
                <input type="input" class="form-control" id="burger-input" name="burger_name">

            </div>
            
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <div class="col-md-4"></div>
    </div>
</div>
